let mapleader = "\<Space>"

" Ack binding, don't jump to first result automatically
nnoremap <Leader>b :Ack!<Space>

" Get out of autocomplete and keep moving along
inoremap <C-Cr> <Left><Right><Cr>

vnoremap <C-h> <Esc><Cr>:w<Cr>
nnoremap <C-h> :w<Cr>
inoremap <C-h> <Esc><Cr>:w<Cr>l

vnoremap <leader>/ <Plug>NERDCommenterToggle
nnoremap <leader>/ <Plug>NERDCommenterToggle

" Save a shift to execute a command
nnoremap ; :

" Tab through splits
nnoremap <Tab> <C-w><C-w>

" Make arrow keys great again
imap <Right> <Esc>gt<Cr>
imap <Left> <Esc>gT<Cr>
vmap <Right> <Esc>gt<Cr>
vmap <Left> <Esc>gT<Cr>
nmap <Right> gt<Cr>
nmap <Left> gT<Cr>

imap <C-Right> <Esc>:vertical resize +10<Cr>
imap <C-Left> <Esc>:vertical resize -10<Cr>
nmap <C-Right> :vertical resize +10<Cr>
nmap <C-Left> :vertical resize -10<Cr>

inoremap <leader>k <Esc>:NERDTreeTabsToggle<Cr><C-w><C-w><C-w><C-p>
vnoremap <leader>k <Esc>:NERDTreeTabsToggle<Cr><C-w><C-w><C-w><C-p>
nnoremap <leader>k <Esc>:NERDTreeTabsToggle<Cr><C-w><C-w><C-w><C-p>

inoremap <leader>K :NERDTreeTabsOpen<Cr>:NERDTreeFind<Cr><C-w><C-w><C-w><C-p>
vnoremap <leader>K :NERDTreeTabsOpen<Cr>:NERDTreeFind<Cr><C-w><C-w><C-w><C-p>
nnoremap <leader>K :NERDTreeTabsOpen<Cr>:NERDTreeFind<Cr><C-w><C-w><C-w><C-p>

" Get out of insert mode
inoremap jk <esc>

" vim-surround config
vnoremap ( S(
vnoremap ) S)
vnoremap [ S[
vnoremap ] S]
vnoremap ' S'
vnoremap ` S`
